<script language="JavaScript" type="text/javascript">
    var count = 1;
    var flagName = false;
    var flagDestination = false;
    function getId()
    {
        var tid = "TR"+count;
        var numzeroes = 6 - tid.length;
        tid = "";
        for(var i=0; i<numzeroes; i++)
        {
            tid += "0";
        }
        tid = "TR"+tid+count;
        document.getElementById("txtTourId").value = tid;
        document.getElementById("divTourName").innerHTML = "";
    }
    function checkTourName(htmlObj)
    {
        var strTName = htmlObj.value;
        if(strTName == "") {
            flagName = false;
            document.getElementById("divTourName").innerHTML = "Please Enter Tour Name.";
        }
        else {
            flagName = false;
            var valid = /^[a-zA-Z ]+$/;
            if(!strTName.match(valid)) {
                document.getElementById("divTourName").innerHTML = "Invalid Course Name. Only Alphabets & Spaces Are Allowed.";
                document.getElementById("txtTourName").className = "error";
                flagName = false; 
            }else {
                flagName = true;
                document.getElementById("divTourName").innerHTML = "<img src =../image/tick2.jpeg >";
                document.getElementById("txtTourName").className = "";
            }
        }
    }
    function checkTouDestination(htmlObj)
    {
        var strTDestination = htmlObj.value;
        if(strTDestination == "") {
            flagDestination = false;
            document.getElementById("divDestination").innerHTML = "Please Enter valid Destination.";
        }
        else {
            flagDestination = false;
            var valid = /^[a-zA-Z, ]+$/;
            if(!strDestination.match(valid)) {
                document.getElementById("divDestination").innerHTML = "Invalid Destination. Only Alphabets, commas & Spaces Are Allowed.";
                document.getElementById("txtDestination").className = "error";
                flagDestination = false; 
            }else {
                flagDestination = true;
                document.getElementById("divDestination").innerHTML = "<img src =../image/tick2.jpeg >";
                document.getElementById("txtDestination").className = "";
            }
        }
    }
</script>